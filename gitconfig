[user]
    name = Samuel DENIS
    email = samuel@denis.tech

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    grep = true
    ui = true

[color "branch"]
    current = green
    local = cyan
    remote = blue

[color "diff"]
    meta = white
    frag = yellow
    old = red
    new = green

[color "status"]
    added = green
    changed = yellow
    untracked = cyan

[diff]
    tool = vimdiff

[alias]
    st = status -uno ./
    sta = status -u
    ck = checkout
    ca = commit -a
    cm = commit -m
    cam = commit -am
    amend = commit --amend
    lg = log --date-order --graph --pretty=format:'%C(yellow)%h%Creset%Cred%d%Creset - %C(green)%cr%Creset, %C(blue)%an%Creset <%C(cyan)%ae%Creset>\n%s\n' --abbrev-commit --
    last = log -10 --date-order --graph --pretty=format:'%C(yellow)%h%Creset%Cred%d%Creset - %C(green)%cr%Creset, %C(blue)%an%Creset <%C(cyan)%ae%Creset>\n%s\n' --abbrev-commit --
    pl = pull --rebase
    rank = shortlog -sn --no-merges # show list of contributors in descending order by number of commits

[apply]
    whitespace = strip

[core]
    editor = vim
    autocrlf = false
    preloadindex = true
    excludesfile = ~/.gitignore_global

[push]
    default = simple
