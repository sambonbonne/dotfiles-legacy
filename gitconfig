[user]
  name = Sam D
  email = sam@wekk.io

[color]
  diff = auto
  status = auto
  branch = auto
  interactive = auto
  grep = true
  ui = true

[color "branch"]
  current = green
  local = cyan
  remote = blue

[color "diff"]
  meta = white
  frag = yellow
  old = red
  new = green

[color "status"]
  added = green
  changed = yellow
  untracked = cyan

[diff]
  tool = nvimdiff
  compactionHeuristic = true

[merge]
  tool = nvimdiff

[mergetool "nvimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'

[alias]
  s = status -uno ./
  st = status -u ./
  sta = status -u
  ck = checkout
  ca = commit -a
  cm = commit -m
  cam = commit -am
  amend = commit --amend
  rbc = rebase --continue
  cp = cherry-pick -n
  lg = log --date-order --graph --pretty=format:'%C(yellow)%h%Creset%Cred%d%Creset %C(green)%ci%Creset - %C(blue)%an%Creset <%C(cyan)%ae%Creset>\n%s\n' --abbrev-commit
  last = log @{u}..HEAD --date-order --graph --pretty=format:'%C(yellow)%h%Creset %C(green)%cr%Creset - %s' --abbrev-commit
  pl = pull --rebase
  ps = !git last && git push
  get = "!git stash && git pull --rebase && git stash pop"
  lines = !"git ls-files | xargs cat | wc -l 2>/dev/null"
  rank = shortlog -sn --no-merges # show list of contributors in descending order by number of commits

[apply]
  whitespace = strip

[core]
  autocrlf = false
  preloadindex = true
  excludesfile = ~/.gitignore_global
  pager = less -x2

[pull]
  rebase = true

[push]
  default = simple

[rebase]
  autoStash = true
