[user]
    name = Samuel Denis
    email = contact@smumu.fr

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    grep = true
    ui = true

[color "branch"]
    current = green
    local = cyan
    remote = blue

[color "diff"]
    meta = white
    frag = yellow
    old = red
    new = green

[color "status"]
    added = green
    changed = yellow
    untracked = cyan

[alias]
    st = status
    ca = commit -a
    amend = commit --amend
    lg = log --date-order --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --
    pl = pull --rebase
    rank = shortlog -sn --no-merges # show list of contributors in descending order by number of commits

[apply]
    whitespace = strip
[core]
	editor = vim
[push]
	default = simple
