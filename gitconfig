[user]
    name = Samuel Denis
    email = samuel@denis.tech

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    grep = true
    ui = true

[color "branch"]
    current = green
    local = cyan
    remote = blue

[color "diff"]
    meta = white
    frag = yellow
    old = red
    new = green

[color "status"]
    added = green
    changed = yellow
    untracked = cyan

[diff]
    tool = vimdiff

[alias]
    st = status
    ca = commit -a
    amend = commit --amend
    lg = log --date-order --graph --pretty=format:'%C(yellow)%h%Creset %Cred%d%Creset: %s - %C(green)%cr%Creset, %C(blue)%an%Creset <%C(cyan)%ae%Creset>' --abbrev-commit --
    last = log -10 --date-order --graph --pretty=format:'%C(yellow)%h%Creset %Cred%d%Creset: %s - %C(green)%cr%Creset, %C(blue)%an%Creset <%C(cyan)%ae%Creset>' --abbrev-commit --
    pl = pull --rebase
    rank = shortlog -sn --no-merges # show list of contributors in descending order by number of commits

[apply]
    whitespace = strip
[core]
    editor = vim
[push]
    default = simple
